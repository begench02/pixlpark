{
	"compilerOptions": {
		"outDir": "dist",
		"module": "ESNext",
		"target": "es5",
		"jsx": "react-jsx",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"baseUrl": ".",
		"esModuleInterop": true,
		"lib": ["es2022", "DOM", "DOM.Iterable"],
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"paths": {
			"@/app/*": ["./src/app/*"],
			"@/entities/*": ["./src/entities/*"],
			"@/pages/*": ["./src/pages/*"],
			"@/shared/*": ["./src/shared/*"]
		}
	},
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	}
}
